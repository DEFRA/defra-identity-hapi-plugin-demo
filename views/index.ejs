<% include ./layout/top.ejs %>

<script>
  function updateServiceId () {
    var selector = document.getElementById('service-selector');
    var selectedJourney = selector.options[selector.selectedIndex].getAttribute('journey');
    var hiddenBackToPath = document.getElementById('hidden-backToPath');
    hiddenBackToPath.value = '/account/' + selectedJourney;
  }

  window.onload = updateServiceId
</script>

<div class="breadcrumbs breadcrumb-two-thirds">
    <ol>
        <li><a href="/">Home</a></li>
        <li>Defra service</li>
